{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "lib": ["es2017"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "sourceMap": false,
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.fixture.ts"]
}
